<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Light theme -->
        <item name="colorPrimary">@color/carolinaBlue</item>
        <item name="colorPrimaryVariant">@color/steelBlue</item>
        <item name="colorOnPrimary">@color/seasalt</item>

        <item name="colorSecondary">@color/jet</item>

        <item name="colorButtonNormal">@color/platinum</item>

        <item name="colorTertiary">@color/slateGray</item>
        <item name="colorOnTertiary">@color/jet</item>

        <item name="android:colorBackground">@color/seasalt</item>
        <item name="colorOnBackground">@color/jet</item>

        <item name="colorError">@color/poppy</item>
        <item name="colorOnError">@color/seasalt</item>

        <item name="android:textColorPrimary">@color/jet</item>

        <!-- Hide keyboard on app launch -->
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>
</resources>