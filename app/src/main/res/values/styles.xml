<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Main Button -->
    <style name="mainButton" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">28sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- SIMPLE CALCULATOR STYLES -->
    <!-- Simple Calculator Button -->
    <style name="simpleButton" parent="mainButton">
        <item name="android:width">64dp</item>
        <item name="android:height">64dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Simple Clear Button -->
    <style name="simpleClearButton" parent="simpleButton">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <!-- Simple Operator Button -->
    <style name="simpleOperator" parent="simpleButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Simple Equals Button -->
    <style name="simpleEquals" parent="simpleOperator">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">32sp</item>
    </style>


    <!-- SCIENTIFIC CALCULATOR STYLES -->
    <!-- Scientific Calculator Button -->
    <style name="scientificButton" parent="mainButton">
        <item name="android:width">60dp</item>
        <item name="android:height">60dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Scientific Clear Button -->
    <style name="scientificClearButton" parent="scientificButton">
        <item name="android:textColor">?attr/colorError</item>
    </style>

    <!-- Scientific Operator Button -->
    <style name="scientificOperator" parent="scientificButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Scientific Equals Button -->
    <style name="scientificEquals" parent="scientificOperator">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Memory Button Style -->
    <style name="memoryButtonStyle" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">54dp</item>
        <item name="android:height">54dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
    </style>

    <!-- Tools Button Style -->
    <style name="toolsButtonStyle" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:width">54dp</item>
        <item name="android:height">54dp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
        <item name="iconGravity">textTop</item>
    </style>

    <!-- Divider -->
    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorTertiary</item>
    </style>

</resources>