<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorBackground"
        android:paddingLeft="18dp"
        android:paddingTop="8dp"
        android:paddingRight="18dp"
        android:paddingBottom="12dp"
        tools:context=".NumberPadFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/column1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/column2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/column2"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/buttonPi"
                style="@style/scientificButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pi"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonClear"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/scientificClearButton"
                android:text="@string/clear"
                app:layout_constraintBottom_toTopOf="@+id/button7"
                app:layout_constraintEnd_toEndOf="@+id/buttonPi"
                app:layout_constraintStart_toStartOf="@+id/buttonPi"
                app:layout_constraintTop_toBottomOf="@+id/buttonPi" />

            <Button
                android:id="@+id/button7"
                style="@style/scientificButton"
                android:text="@string/n7"
                app:layout_constraintBottom_toTopOf="@+id/button4"
                app:layout_constraintEnd_toEndOf="@+id/buttonClear"
                app:layout_constraintStart_toStartOf="@+id/buttonClear"
                app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

            <Button
                android:id="@+id/button4"
                style="@style/scientificButton"
                android:text="@string/n4"
                app:layout_constraintBottom_toTopOf="@+id/button1"
                app:layout_constraintEnd_toEndOf="@+id/button7"
                app:layout_constraintStart_toStartOf="@+id/button7"
                app:layout_constraintTop_toBottomOf="@+id/button7" />

            <Button
                android:id="@+id/button1"
                style="@style/scientificButton"
                android:text="@string/n1"
                app:layout_constraintBottom_toTopOf="@+id/buttonSign"
                app:layout_constraintEnd_toEndOf="@+id/button4"
                app:layout_constraintStart_toStartOf="@+id/button4"
                app:layout_constraintTop_toBottomOf="@+id/button4" />

            <Button
                android:id="@+id/buttonSign"
                style="@style/scientificButton"
                android:text="@string/sign"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button1"
                app:layout_constraintStart_toStartOf="@+id/button1"
                app:layout_constraintTop_toBottomOf="@+id/button1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/column2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/column3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/column1"
            app:layout_constraintTop_toTopOf="@+id/column3"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/buttonEuler"
                style="@style/scientificButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euler"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonBracketOpen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/buttonBracketOpen"
                style="@style/scientificButton"
                android:text="@string/bracketOpen"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/button8"
                app:layout_constraintEnd_toEndOf="@+id/buttonEuler"
                app:layout_constraintStart_toStartOf="@+id/buttonEuler"
                app:layout_constraintTop_toBottomOf="@+id/buttonEuler" />

            <Button
                android:id="@+id/button8"
                style="@style/scientificButton"
                android:text="@string/n8"
                app:layout_constraintBottom_toTopOf="@+id/button5"
                app:layout_constraintEnd_toEndOf="@+id/buttonBracketOpen"
                app:layout_constraintStart_toStartOf="@+id/buttonBracketOpen"
                app:layout_constraintTop_toBottomOf="@+id/buttonBracketOpen" />

            <Button
                android:id="@+id/button5"
                style="@style/scientificButton"
                android:text="@string/n5"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toBottomOf="@+id/button8" />

            <Button
                android:id="@+id/button2"
                style="@style/scientificButton"
                android:text="@string/n2"
                app:layout_constraintBottom_toTopOf="@+id/button0"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toBottomOf="@+id/button5" />

            <Button
                android:id="@+id/button0"
                style="@style/scientificButton"
                android:text="@string/n0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button2"
                app:layout_constraintStart_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/button2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/column3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/column4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/column2"
            app:layout_constraintTop_toTopOf="@+id/column4"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/buttonFactorial"
                style="@style/scientificButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factorial"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/buttonBracketClose"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/buttonBracketClose"
                style="@style/scientificButton"
                android:text="@string/bracketClose"
                app:layout_constraintBottom_toTopOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="@+id/buttonFactorial"
                app:layout_constraintStart_toStartOf="@+id/buttonFactorial"
                app:layout_constraintTop_toBottomOf="@+id/buttonFactorial" />

            <Button
                android:id="@+id/button9"
                style="@style/scientificButton"
                android:text="@string/n9"
                app:layout_constraintBottom_toTopOf="@+id/button6"
                app:layout_constraintEnd_toEndOf="@+id/buttonBracketClose"
                app:layout_constraintStart_toStartOf="@+id/buttonBracketClose"
                app:layout_constraintTop_toBottomOf="@+id/buttonBracketClose" />

            <Button
                android:id="@+id/button6"
                style="@style/scientificButton"
                android:text="@string/n6"
                app:layout_constraintBottom_toTopOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="@+id/button9"
                app:layout_constraintStart_toStartOf="@+id/button9"
                app:layout_constraintTop_toBottomOf="@+id/button9" />

            <Button
                android:id="@+id/button3"
                style="@style/scientificButton"
                android:text="@string/n3"
                app:layout_constraintBottom_toTopOf="@+id/buttonDecimal"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toBottomOf="@+id/button6" />

            <Button
                android:id="@+id/buttonDecimal"
                style="@style/scientificButton"
                android:text="@string/decimal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/button3"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toBottomOf="@+id/button3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/column4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/column3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/buttonDivide"
                style="@style/scientificOperator"
                android:gravity="center|center_horizontal|center_vertical"
                android:includeFontPadding="false"
                android:text="@string/divide"
                app:layout_constraintBottom_toTopOf="@+id/buttonMultiply"
                app:layout_constraintEnd_toEndOf="@+id/buttonMultiply"
                app:layout_constraintStart_toStartOf="@+id/buttonMultiply"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintVertical_chainStyle="packed" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/scientificOperator"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/multiply"
                app:layout_constraintBottom_toTopOf="@+id/buttonAdd"
                app:layout_constraintEnd_toEndOf="@+id/buttonAdd"
                app:layout_constraintStart_toStartOf="@+id/buttonAdd"
                app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/scientificOperator"
                android:includeFontPadding="false"
                android:text="@string/add"
                app:layout_constraintBottom_toTopOf="@+id/buttonSubtract"
                app:layout_constraintEnd_toEndOf="@+id/buttonSubtract"
                app:layout_constraintStart_toStartOf="@+id/buttonSubtract"
                app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/scientificOperator"
                android:includeFontPadding="false"
                android:text="@string/subtract"
                app:layout_constraintBottom_toTopOf="@+id/buttonEqual"
                app:layout_constraintEnd_toEndOf="@+id/buttonEqual"
                app:layout_constraintStart_toStartOf="@+id/buttonEqual"
                app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

            <Button
                android:id="@+id/buttonEqual"
                style="@style/scientificEquals"
                android:layout_height="120dp"
                android:width="60dp"
                android:height="60dp"
                android:includeFontPadding="false"
                android:text="@string/equals"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/buttonSubtract"
                app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>